<h1 class="text-center">Nate's Bland Burgers!</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 text-center">
      <h2>Available burgers</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Eat!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6 text-center">
      <h2>Burgers you've eaten</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Add a burger</h2>
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Add burger</button>
      </form>
    </div>
  </div>
</div>